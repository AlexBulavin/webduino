<category id="category_fu_basic" name="%{BKY_FU_BASIC}" colour="%{BKY_FU_BASIC_HUE}">

	<category id="category_fu_io" name="%{BKY_FU_IO}">
	  <block type="fu_io_pinmode">
		<value name="pin">
		  <shadow type="math_number">
			<field name="NUM">2</field>
		  </shadow>
		</value>  
		<field name="type"></field>
	  </block>
	  <block type="fu_io_write">
		<value name="pin">
		  <shadow type="math_number">
			<field name="NUM">2</field>
		  </shadow>
		</value>
		<value name="value">
		  <shadow type="math_number">
			<field name="NUM">1</field>
		  </shadow>
		</value>
	  </block>
	  <block type="fu_io_read">
		<value name="pin">
		  <shadow type="math_number">
			<field name="NUM">2</field>
		  </shadow>
		</value>
	  </block>
	</category>


	<category id="category_fu_time" name="%{BKY_FU_TIME}">
	  <block type="fu_time_delay">
		<value name="ms">
		  <shadow type="math_number">
			<field name="NUM">1000</field>
		  </shadow>
		</value>
	  </block>
	  <block type="fu_time_delaymicroseconds">
		<value name="us">
		  <shadow type="math_number">
			<field name="NUM">100</field>
		  </shadow>
		</value>
	  </block>
	  <block type="fu_time_micros"></block>
	  <block type="fu_time_millis"></block>
	</category>
	
	<category id="category_fu_serial" name="%{BKY_FU_SERIAL}">
		<block type="fu_serial_begin">
			<value name="baudrate">
				<shadow type="math_number">
					<field name="NUM">9600</field>
				</shadow>
			</value>
		</block>
		<block type="fu_serial_begin_config">
			<field name="config">SERIAL_8N1</field>
			<value name="baudrate">
				<shadow type="math_number">
					<field name="NUM">9600</field>
				</shadow>
			</value>
		</block>		
	</category>	

</category>